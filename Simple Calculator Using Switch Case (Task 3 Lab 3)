#include <iostream>
using namespace std;

int main() {
	double num1, num2, result;
	int operation;

	cout << "Enter the first number";
	cin >> num1;

	cout << "Enter the second number";
	cin >> num2;

	cout << "Select an operation ";
	cout << "1 for Addition ";
	cout << "2 for Subtraction ";
	cout << "3 for Multiplication ";
	cout << "4 for Division ";
	cin >> operation;

	switch (operation) {
	case 1:
		result = num1 + num2
		cout << "Result: " << result << endl;
		break;
	case 2:
		result = num1 - num2
		cout << "Result: " << result << endl;
		break;
	case 3:
		result = num1 * num2
		cout << "Result: " << result << endl;
		break;
	case 4:
		result = num1 / num2
		cout << "Result: " << result << endl;
		break;

	}

	return 0;
}
